    "esbuild-plugin-globals": "^0.1.1",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "browser-or-node": "^2.0.0",
    "deepmerge": "^4.2.2",
    "eventemitter3": "^4.0.7",
    "ky": "^0.28.7",
    "ky-universal": "^0.9.1"
  },
  "peerDependencies": {
    "bsv": "^2.0.10"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
